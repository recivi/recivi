---
// Sets the basic HTML structure and includes core CSS files that are applicable
// across all media.

import 'virtual:pf/custom-css/Root'
import '../styles/core.css'
import '../styles/props.css'
import '../styles/reset.css'
import '../styles/universal.css'
import '../styles/utils.css'

import config from 'virtual:pf/config'

const layers = `@layer ${config.css.layers.join(', ')};`
---

<!doctype html>
<html lang={config.locale.bcp47} dir={config.locale.dir} {...Astro.props}>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="viewport-fit=cover, width=device-width, initial-scale=1.0"
    />

    <!-- This is a hack to prevent layer order from deviating. -->
    <style is:inline set:html={layers}></style>

    <!-- Add extra head elements here. -->
    <slot name="head" />
  </head>

  <body>
    <slot />
  </body>
</html>
