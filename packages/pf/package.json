{
  "$schema": "https://json.schemastore.org/package.json",
  "packageManager": "pnpm@9.15.0",
  "name": "@recivi/pf",
  "version": "0.0.3",
  "description": "personal portfolio powered by Récivi, a new kind of résumé for computers and humans, in that order",
  "keywords": [
    "resume",
    "cv",
    "portfolio",
    "astro-integration"
  ],
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Dhruv Bhanushali",
    "url": "https://dhruvkb.dev/"
  },
  "homepage": "https://recivi.pages.dev/",
  "repository": "github:recivi/recivi",
  "bugs": "https://github.com/recivi/recivi/issues",
  "funding": "https://github.com/sponsors/dhruvkb",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./components": "./src/components.ts",
    "./content": "./src/content.ts",
    "./layouts/Root.astro": {
      "import": "./src/layouts/Root.astro",
      "types": "./src/layouts/Root.astro.tsx"
    },
    "./layouts/Print.astro": {
      "import": "./src/layouts/Print.astro",
      "types": "./src/layouts/Print.astro.tsx"
    },
    "./layouts/Og.astro": {
      "import": "./src/layouts/Og.astro",
      "types": "./src/layouts/Og.astro.tsx"
    },
    "./layouts/Web.astro": {
      "import": "./src/layouts/Web.astro",
      "types": "./src/layouts/Web.astro.tsx"
    },
    "./pages/*": "./src/pages/*",
    "./recivi/*": "./src/recivi/*.ts",
    "./styles/*": "./src/styles/*",
    "./utils/*": "./src/utils/*.ts"
  },
  "scripts": {
    "check": "astro check",
    "astro": "astro",
    "test": "tsx --test"
  },
  "peerDependencies": {
    "astro": "catalog:"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "astro": "catalog:",
    "tsx": "^4.20.6",
    "unified": "^11.0.5",
    "vfile": "^6.0.3"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.12",
    "@iconify-json/lucide": "^1.2.78",
    "@iconify-json/simple-icons": "^1.2.61",
    "@recivi/schema": "workspace:",
    "astro-integration-kit": "^0.19.1",
    "magic-string": "^0.30.21",
    "piccolore": "^0.1.3",
    "puppeteer": "^24.34.0",
    "sharp": "^0.32.6"
  }
}
